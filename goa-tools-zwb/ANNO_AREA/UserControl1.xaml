<Window x:Class="ANNO_AREA.Window1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ANNO_AREA"
             Height="260" Width="125"
             ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="200"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
        </Grid.ColumnDefinitions>

        <ListBox Width="100" x:Name="listbox" Grid.Row="0" Grid.Column="0" DisplayMemberPath="Name" SelectionMode="Single"  />
        <Button Width="100" x:Name="button"  Grid.Row="1" Grid.Column="0" Content="确认" Click="button_Click" />
    </Grid>
</Window>
